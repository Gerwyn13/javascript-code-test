    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Debug Jest Test File",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceFolder}",
            "args": ["--verbose", "--runInBand", "--no-cache", "--no-watch", "--runTestsByPath", "${relativeFile}"]
        }
    ]
}